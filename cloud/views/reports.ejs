<h1 class="page-header">Reports</h1>
<div class="input-container">
    <span id="report-client-select"></span>
    <span id="date-selects-container" style="display: none;">
        <span id="report-before-date-select"></span>
        <span id="report-now-date-select"></span>
    </span>
</div>
<div class="input-container">
    <select id="report-select" style="display: none;">
        <option value="usage">Stock Usage Report</option>
        <option value="sales">Sales Report</option>
        <option value="variance">Variance Report</option>
        <option value="variance_by_tag">Variance By Tag Report</option>
        <option value="cost">Cost on Hand Report</option>
        <option value="stock">Real Time Stock Report</option>
    </select>
    <span id="report-location-select"></span>
    <input type="hidden" id="tag-select" style="min-width: 200px;" />
    <button id="download-report" type="button" class="btn btn-primary" style="display: none;"><span class="glyphicon glyphicon-download"></span> Download CSV</button>
</div>
<div id="sales-chart" style="display: none;"></div>
<div id="tables">
</div>
<span id="stock-file-input" class="file-input btn btn-primary btn-file add-button" style="display: none;">
    <span class="glyphicon glyphicon-upload"></span> Input sales&hellip; <input type="file" multiple accept="text/csv">
</span>
<table class="table table-striped table-bordered" cellspacing="0" width="100%" id="stock-report-table" style="display: none;">
    <thead>
    <tr>
        <th colspan="1" class="right-border"></th>
        <th colspan="2" id="stock-now" class="right-border">Before</th>
        <th colspan="2" class="right-border">Sold</th>
        <th colspan="2" class="right-border">Current</th>
    </tr>
    <tr>
        <th>Product</th>
        <th>Partials</th>
        <th>Fulls</th>
        <th>Ounces</th>
        <th>Fulls</th>
        <th>Partials</th>
        <th>Fulls</th>
    </tr>
    </thead>
</table>
<table class="table table-striped table-bordered" cellspacing="0" width="100%" id="usage-report-table" style="display: none;">
    <thead>
    <tr>
        <th>Stock Usage</th>
        <th>Value</th>
        <th>Budget</th>
        <th>Actual</th>
        <th>Status</th>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>Total Retail Value:</th>
        <th id="retail-total" colspan="4"></th>
    </tr>
    </tfoot>
</table>
